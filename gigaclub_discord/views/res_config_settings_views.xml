<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record
      id="res_config_settings_view_form_inherit_gigaclub_discord"
      model="ir.ui.view"
    >
            <field
        name="name"
      >res.config.settings.view.form.inherit.gigaclub.discord</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="40" />
            <field
        name="inherit_id"
        ref="gigaclub_base.res_config_settings_view_form_inherit_gigaclub_base"
      />
            <field name="arch" type="xml">
                <xpath expr="//div[@id='gigaclub_base_settings']" position="inside">
                    <h2>Discord</h2>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane" />
                        <div class="o_setting_right_pane">
                            <label for="discord_bot_token" />
                            <field name="discord_bot_token" password="True" />
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane" />
                        <div class="o_setting_right_pane">
                            <label for="discord_server_id" />
                            <field name="discord_server_id" />
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane" />
                        <div class="o_setting_right_pane">
                            <label for="discord_system_channel_id" />
                            <field name="discord_system_channel_id" />
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <field name="discord_server_status" invisible="True" />
                        <button
              class="btn btn-primary"
              type="object"
              name="start_discord_bot"
              string="Start Bot"
              attrs="{'invisible': ['|', ('discord_bot_token', '=', False), ('discord_server_status', '=', 'started')]}"
            />
                        <button
              class="btn btn-primary"
              type="object"
              name="stop_discord_bot"
              string="Stop Bot"
              attrs="{'invisible': ['|', ('discord_bot_token', '=', False), ('discord_server_status', '=', 'stopped')]}"
            />
                        <button
              class="btn btn-primary"
              type="object"
              name="reload_discord_bot"
              string="Reload Bot"
              attrs="{'invisible': [('discord_bot_token', '=', False)]}"
            />
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
