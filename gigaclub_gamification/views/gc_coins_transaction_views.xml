<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="gc_coins_transaction_view_form" model="ir.ui.view">
        <field name="name">gc.coins.transaction.form</field>
        <field name="model">gc.coins.transaction</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="amount" />
                        <field name="sender_id" />
                        <field name="receiver_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="gc_coins_transaction_view_tree" model="ir.ui.view">
        <field name="name">gc.coins.transaction.form</field>
        <field name="model">gc.coins.transaction</field>
        <field name="arch" type="xml">
            <tree>
                <field name="amount" />
                <field name="sender_id" />
                <field name="receiver_id" />
            </tree>
        </field>
    </record>

</odoo>
