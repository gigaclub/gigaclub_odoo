<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="gc_reward_view_form" model="ir.ui.view">
        <field name="name">gc.reward.form</field>
        <field name="model">gc.reward</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="coins" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="gc_reward_view_tree" model="ir.ui.view">
        <field name="name">gc.reward.tree</field>
        <field name="model">gc.reward</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="coins" />
            </tree>
        </field>
    </record>

</odoo>
