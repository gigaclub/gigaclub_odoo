<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template
    id="portal_breadcrumbs_inherit_gigaclub_portal_translation"
    inherit_id="portal.portal_breadcrumbs"
    priority="40"
  >
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li
        t-if="page_name == 'translation' or translation"
        class="col-lg-2"
        t-attf-class="breadcrumb-item #{'active ' if not translation else ''}"
      >
                <a
          t-if="translation"
          t-attf-href="/my/translations?{{ keep_query() }}"
        >Translations</a>
                <t t-else="">Translations</t>
            </li>
            <li
        t-if="mode == 'create' and translation and isinstance(translation, dict)"
        class="breadcrumb-item active"
      >
                Create
            </li>
            <li t-elif="translation" class="breadcrumb-item active">
                <t t-if="isinstance(translation, dict)">
                    <t t-out="translation.get('name', '')" />
                </t>
                <t t-else="">
                    <t t-out="translation.name" />
                </t>
            </li>
            <li
        t-if="mode == 'edit' and translation and isinstance(translation, dict)"
        class="breadcrumb-item active"
      >
                Edit
            </li>
        </xpath>
    </template>

    <template
    id="portal_my_home_inherit_gigaclub_portal_translation"
    inherit_id="project.portal_my_home"
    customize_show="True"
  >
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Translations</t>
                <t t-set="url" t-value="'/my/translations'" />
                <t t-set="placeholder_count" t-value="'translation_count'" />
            </t>
        </xpath>
    </template>

    <template id="portal_my_translations">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True" />

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Translations</t>
            </t>

            <t t-if="not translations">
                <div class="alert alert-warning mt8" role="alert">
                    There are no translations.
                </div>
            </t>
            <t t-if="translations" t-call="portal.portal_table">
                <thead>
                    <tr>
                        <th class="text-left">Name</th>
                        <th>Translation</th>
                        <th>Category</th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="translations" t-as="translation">
                        <td>
                            <a
                t-attf-href="/my/translation/#{translation.id}/view?{{ keep_query() }}"
              ><span t-field="translation.name" /></a>
                        </td>
                        <td>
                            <span
                t-out="translation.translation_entry_ids.filtered(lambda x: x.env.user.lang == x.lang)[:1].content"
              />
                        </td>
                        <td>
                            <span t-field="translation.category" />
                        </td>
                    </tr>
                </tbody>
            </t>
        </t>
    </template>

    <template id="portal_my_translation_view">
        <t t-call="portal.portal_layout">
            <t t-call="portal.portal_record_layout">
                <t t-set="card_header">
                    <h5 class="mb-0">
                        <span t-field="translation.name" class="text-truncate" />
                    </h5>
                </t>
                <t t-set="card_body">
                    <div class="row">
                        <div class="col">
                            <label
                for="contentFormControlTextarea"
                class="form-label"
              >Input:</label>
                            <div class="is-flex ml-auto">
                                <div class="dropdown">
                                    <a
                    class="btn btn-dark dropdown-toggle"
                    href="#"
                    role="button"
                    data-bs-toggle="dropdown"
                    aria-expanded="false"
                  >

                                    </a>
                                    <div
                    class="dropdown-menu"
                    id="palette-dropdown-menu"
                    role="menu"
                  >
                                        <div class="dropdown-content">
                                            <div class="dropdown-item">
                                                <div class="is-flex">
                                                    <div
                            id="named-swatch"
                            class="is-flex-grow-1 is-hidden-mobile"
                          >
                                                        <div
                              class="swatch swatch-l"
                              data-color="#000000"
                              style="background: #000000;"
                              title="Black"
                            />
                                                        <div
                              class="swatch swatch-r"
                              data-color="#555555"
                              style="background: #555555;"
                              title="Dark Gray"
                            />
                                                        <div
                              class="swatch swatch-l"
                              data-color="#0000aa"
                              style="background: #0000aa;"
                              title="Dark Blue"
                            />
                                                        <div
                              class="swatch swatch-r"
                              data-color="#5555ff"
                              style="background: #5555ff;"
                              title="Blue"
                            />
                                                        <div
                              class="swatch swatch-l"
                              data-color="#00aa00"
                              style="background: #00aa00;"
                              title="Dark Green"
                            />
                                                        <div
                              class="swatch swatch-r"
                              data-color="#55ff55"
                              style="background: #55ff55;"
                              title="Green"
                            />
                                                        <div
                              class="swatch swatch-l"
                              data-color="#00aaaa"
                              style="background: #00aaaa;"
                              title="Dark Aqua"
                            />
                                                        <div
                              class="swatch swatch-r"
                              data-color="#55ffff"
                              style="background: #55ffff;"
                              title="Aqua"
                            />
                                                        <div
                              class="swatch swatch-l"
                              data-color="#aa0000"
                              style="background: #aa0000;"
                              title="Dark Red"
                            />
                                                        <div
                              class="swatch swatch-r"
                              data-color="#ff5555"
                              style="background: #ff5555;"
                              title="Red"
                            />
                                                        <div
                              class="swatch swatch-l"
                              data-color="#aa00aa"
                              style="background: #aa00aa;"
                              title="Dark Purple"
                            />
                                                        <div
                              class="swatch swatch-r"
                              data-color="#ff55ff"
                              style="background: #ff55ff;"
                              title="Light Purple"
                            />
                                                        <div
                              class="swatch swatch-l"
                              data-color="#ffaa00"
                              style="background: #ffaa00;"
                              title="Gold"
                            />
                                                        <div
                              class="swatch swatch-r"
                              data-color="#ffff55"
                              style="background: #ffff55;"
                              title="Yellow"
                            />
                                                        <div
                              class="swatch swatch-l"
                              data-color="#aaaaaa"
                              style="background: #aaaaaa;"
                              title="Gray"
                            />
                                                        <div
                              class="swatch swatch-r"
                              data-color="#ffffff"
                              style="background: #ffffff;"
                              title="White"
                            />
                                                    </div>
                                                    <div id="picker" />
                                                </div>
                                            </div>
                                            <hr class="dropdown-divider" />
                                            <div class="dropdown-item is-flex">
                                                <div
                          class="field has-addons is-flex-grow-1"
                        >
                                                    <div
                            id="preview-swatch"
                            class="swatch swatch-l is-flex-grow-1"
                            style="background: #ffffff;"
                          />
                                                    <div class="control">
                                                        <input
                              id="preview-hex"
                              class="input is-family-monospace has-text-centered"
                              type="text"
                              size="7"
                              value="#ffffff"
                            />
                                                    </div>
                                                    <div class="control">
                                                        <button
                              id="use-color"
                              class="button is-success"
                            >Apply
                                                            color</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="is-flex ml-1">
                                <div class="buttons has-addons is-right">
                                    <button
                    class="button"
                    id="editor-bold-button"
                    aria-label="Bold"
                    title="Add bold text"
                  >
                                        <span class="icon is-small"><i
                        class="fas fa-bold"
                      /></span>
                                    </button>
                                    <button
                    class="button"
                    id="editor-italic-button"
                    aria-label="Italic"
                    title="Add italic text"
                  >
                                        <span class="icon is-small"><i
                        class="fas fa-italic"
                      /></span>
                                    </button>
                                    <button
                    class="button"
                    id="editor-underline-button"
                    aria-label="Underline"
                    title="Add underlined text"
                  >
                                        <span class="icon is-small"><i
                        class="fas fa-underline"
                      /></span>
                                    </button>
                                    <button
                    class="button"
                    id="editor-strikethrough-button"
                    aria-label="Strikethrough"
                    title="Add strikethrough text"
                  >
                                        <span class="icon is-small"><i
                        class="fas fa-strikethrough"
                      /></span>
                                    </button>
                                </div>
                            </div>
                            <!-- TODO(rymiel): These decorations which don't work in non-chat contexts should probably be hidden when in that mode -->
                            <div class="is-flex ml-1">
                                <div class="buttons has-addons is-right">
                                    <button
                    class="button"
                    id="editor-open-url-button"
                    aria-label="Open URL"
                    title="Add clickable URL"
                  >
                                        <span class="icon is-small"><i
                        class="fas fa-link"
                      /></span>
                                    </button>
                                    <button
                    class="button"
                    id="editor-run-command-button"
                    aria-label="Run Command"
                    title="Add clickable command"
                  >
                                        <span class="icon is-small">
                                            <svg
                        class="svg-inline--fa a-w-16"
                        height="1em"
                        aria-hidden="true"
                        focusable="false"
                        role="img"
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 448 512"
                      >
                                                <path
                          fill="currentColor"
                          d="M339.313 2.75926L386.7 2.91021C404.492 2.91021 413.209 14.9141 404.991 30.6898L133.238 492.841L130.988 496.844C127.683 503.157 121.522 508.383 114.492 508.383L67.7287 508.443L61.7829 508.443C43.9915 508.443 35.2739 496.439 43.4916 480.663L45.4373 476.663L322.817 14.2984C326.122 7.98572 332.283 2.75926 339.313 2.75926Z"
                        />
                                            </svg>
                                        </span>
                                    </button>
                                    <button
