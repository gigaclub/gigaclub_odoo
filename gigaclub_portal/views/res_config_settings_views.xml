<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record
      id="res_config_settings_view_form_inherit_gigaclub_portal"
      model="ir.ui.view"
    >
            <field
        name="name"
      >res.config.settings.view.form.inherit.gigaclub_portal</field>
            <field name="model">res.config.settings</field>
            <field
        name="inherit_id"
        ref="gigaclub_base.res_config_settings_view_form_inherit_gigaclub_base"
      />
            <field name="arch" type="xml">
                <xpath expr="//div[@id='gigaclub_base_settings']" position="inside">
                    <h2>Portal</h2>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane" />
                        <div class="o_setting_right_pane">
                            <label for="azure_client_id" />
                            <field name="azure_client_id" />
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane" />
                        <div class="o_setting_right_pane">
                            <label for="microsoft_login_url" />
                            <field name="microsoft_login_url" widget="url" />
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
