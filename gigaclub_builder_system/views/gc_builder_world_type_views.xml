<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record model="ir.ui.view" id="gc_builder_world_type_tree_view">
            <field name="name">gc.builder.world.tree.view</field>
            <field name="model">gc.builder.world.type</field>
            <field name="arch" type="xml">
                <tree string="World Types">
                    <field name="name" />
                    <field name="default" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="gc_builder_world_type_form_view">
            <field name="name">gc.builder.world.form.view</field>
            <field name="model">gc.builder.world.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="default" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="gc_builder_world_type_action">
            <field name="name">World Type</field>
            <field name="res_model">gc.builder.world.type</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
